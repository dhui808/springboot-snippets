<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Appender for logging to a file with daily rollover -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>target/logs/application.log</file> <!-- Path to the current log file -->

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover: logs/application-%d{yyyy-MM-dd}.log -->
            <fileNamePattern>target/logs/application-%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep 7 days worth of history -->
            <maxHistory>7</maxHistory>
        </rollingPolicy>

        <encoder>
            <!-- Pattern for log message format -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="STDOUT" />
    </root>

</configuration>